{
  "name": "stocks-vscode",
  "displayName": "stocks.vscode",
  "description": "Track stocks in the VSCode status bar.",
  "version": "0.1.0",
  "publisher": "Zkerhcy",
  "repository": {
    "type": "git",
    "url": "https://github.com/zkerhcy/stocks-vscode.git"
  },
  "engines": {
    "vscode": "^1.41.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "icon": "img/icon.png",
  "contributes": {
    "configuration": {
      "properties": {
        "stocks.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable this extension."
        },
        "stocks.refreshInterval": {
          "type": "number",
          "default": 60,
          "description": "Seconds interval for refreshing symbols from remote."
        },
        "stocks.loopInterval": {
          "type": "number",
          "default": 3,
          "description": "Seconds interval for loop each symbol in the status bar."
        },
        "stocks.positiveColor": {
          "type": "string",
          "default": "red",
          "enum": [
            "red",
            "green"
          ],
          "description": "Highlight colors for symbols when up and down, positiveColor for up, the other for down."
        },
        "stocks.showPercentage": {
          "type": "boolean",
          "default": false,
          "description": "Show percentage of up and down."
        },
        "stocks.symbols": {
          "type": "array",
          "default": [],
          "description": "The list of stock symbols tracked in the status bar"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.1",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.41.0",
    "eslint": "^6.8.0",
    "@typescript-eslint/parser": "^2.18.0",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "glob": "^7.1.6",
    "mocha": "^10.2.0",
    "typescript": "^3.7.5",
    "vscode-test": "^1.3.0"
  },
  "dependencies": {
    "iconv-lite": "^0.5.1"
  }
}